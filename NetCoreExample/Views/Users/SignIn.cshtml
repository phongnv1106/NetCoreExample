
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>

<div>
    <form method="post" action="@Url.Action("SignIn")">
        <div class="form-group">
            <input class="form-control" name="UserName" />
        </div>
        <div class="form-group">
            <input class="form-control" name="Password" />
        </div>
        <div class="form-group">
            <button class="btn btn-info">Sign In</button>
        </div>
    </form>
</div>